@model List<AssignRoleViewModel>
@{
    ViewData["Title"] = "AssignRole";
}
<div class="box">
    <h1>AssignRole</h1>
    <table class="table">
        <tr>
            <td>UserId</td>
            <td>User Name</td>
            <td>Email</td>
            <td>Role Name</td>
            <td>Roles</td>

        </tr>


        @foreach (var item in Model)
        {

            <tr>
                <td>@item.UserId</td>
                <td>@item.UserName</td>
                <td>@item.Email</td>
                <td>@item.RoleName</td>
                <td>



                    <form asp-controller="AccountManager" asp-action="AssignRole" method="post">
                        <input type="hidden" name="UserId" asp-for="@item.UserId" />
                        <div class="d-flex">
                            <div class="form-group mr-3">
                                <select name="RoleName" asp-for="@item.RoleName" asp-items="new SelectList(item.Roles)" class="form-control ">
                                    <option>Select</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Assign Role" class="btn btn-primary" />
                            </div>
                        </div>

                    </form>


                </td>
            </tr>
        }



    </table>

</div>
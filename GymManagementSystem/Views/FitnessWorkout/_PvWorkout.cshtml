@model IEnumerable<GymManagementSystem.Entities.Models.Workout>

<div class="row mt-5">
    <div class="col-md-12">


        @foreach (var item in Model)
        {
            var Photopath = "~/img/" + (item.ImageURL ?? "noimage.png");
            
            <div class="row mb-3">

                <div class="col-md-3 col-sm-12">
                    <img style="width:100%; height:200px; object-fit: cover;" src="@Photopath" asp-append-version="true" />
                </div>
                <div class="col-md-4 col-sm-12">
                    <h4>@item.WorkoutName</h4>
                    <p>@item.Description</p>
                    <p><i class="fa fa-users" aria-hidden="true"></i> Max Praticipants:@item.MaxParticpant</p>
                </div>
                <div class="col-md-3 col-sm-12">
                    <h4>Pricing</h4>
                    <p>Rs @item.Price per participant</p>
                </div>
                <div class="col-md-2 col-sm-12 text-right text-sm-center ">
                    <div class="d-flex flex-column">
                        <p><a asp-action="EditWorkout" asp-route-id="@item.WorkoutId" class="btn btn-primary same-size"><i class="fa fa-pencil-square-o"></i>Edit</a></p>
                        <p><a  class="btn btn-primary same-size"  data-toggle="modal" data-target="#myModal"><i class="fa fa-trash-o"></i>Delete</a></p>
                    </div>
                </div>
                <!-- The Modal -->
                <div class="modal" id="myModal">
                    <div class="modal-dialog">
                        <div class="modal-content">

                            <!-- Modal Header -->
                            <div class="modal-header">
                                <h4 class="modal-title">Delete Confirmation</h4>
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                            </div>

                            <!-- Modal body -->
                            <div class="modal-body text-center">
                                <i class="fa fa-info-circle" aria-hidden="true"></i>
                                Are you sure want to delete this item ?
                            </div>

                            <!-- Modal footer -->
                            <div class="modal-footer">

                                <p><a asp-action="DeleteWorkout" asp-route-id="@item.WorkoutId" class="btn btn-primary same-size "><i class="fa fa-trash-o"></i>Delete</a></p>
                                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                            </div>

                        </div>
                    </div>
                </div>



            </div>
            
        }
    </div>
</div>



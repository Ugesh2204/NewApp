@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}



<div id="all">
    <div id="content">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <!-- breadcrumb-->
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li aria-current="page" class="breadcrumb-item active">New account / Sign in</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-lg-6">
                    <div class="box">
                        <h1>New account</h1>

                        <hr>
                        <form asp-controller="Account" asp-action="Register" method="post">
                            @Html.Raw(ViewBag.Msg)

                            <div asp-validation-summary="All" style="color:red">
                                @*<span>Please correct the following errors</span>*@

                            </div>

                            <div class="form-group">
                                <label asp-for="UserName">Name</label>
                                <input asp-for="UserName" type="text" class="form-control">
                                <span asp-validation-for="UserName" style="color:red"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="MobileNumber">Mobile Number</label>
                                <input asp-for="MobileNumber" id="mobile" type="text" class="form-control">
                                <span asp-validation-for="MobileNumber" style="color:red"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Email">Email</label>
                                <input asp-for="Email" id="email" type="text" class="form-control">

                                <span asp-validation-for="Email" style="color:red"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Password">Password</label>
                                <input asp-for="Password" id="password" type="text" class="form-control">
                                <span asp-validation-for="Password" style="color:red"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="ConfirmPassword">ConfirmPassword</label>
                                <input asp-for="ConfirmPassword" id="password" type="text" class="form-control">
                                <span asp-validation-for="ConfirmPassword" style="color:red"></span>
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-user-md"></i> Register</button>
                            </div>
                        </form>


                     


                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="box">
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@model ForgotPasswordViewModel

@{
    ViewData["Title"] = "ForgotPassword";
}


<div id="all">
    <div id="content">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <!-- breadcrumb-->
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li aria-current="page" class="breadcrumb-item active">New account / Sign in</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-lg-6">
                    <div class="box">

                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="box">
                        <h1>Reset Password</h1>

                        @Html.Raw(ViewBag.Msg)

                        <form asp-controller="Account" asp-action="ForgotPassword" method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <label for="UserEmail">Email</label>
                                <input asp-for="UserEmail " id="Username" type="text" class="form-control">
                                <span asp-validation-for="UserEmail" class="text-danger"></span>
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-sign-in"></i>Reset Password</button>
                            </div>


                        </form>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@model UserProfileDetail
@{
    ViewData["Title"] = "Index";

    var Photopath = "~/userimages/" + Model.ImagePhoto ?? "profile-img.png";

}



<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="d-flex justify-content-end">
                    <a  asp-controller="Profile" asp-action="Edit"  asp-route-id="@Model.ApplicationUserId"  class="btn btn-primary"><i class="fa fa-pencil-square-o" aria-hidden="true"></i><span>Edit</span></a>
                </div>
                <h1>My Profile</h1><hr>
                <div class="row">


                    <div class="col-md-6 text-center">
                        @if (Model.ImagePhoto == null)
                        {
                            <img src="userimages/noimage.png" alt="" class="img-fluid img-thumbnail" style="width:300px; height:300px; object-fit:cover">
                        }
                        else
                        {
                            <img  src="@Photopath" class="img-fluid img-thumbnail" style="width:300px; height:300px; object-fit:cover" asp-append-version="true" />
                        }

                   
                    </div>



                    <div class="col-md-6">

                        <div class="row">
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label asp-for="FirstName">First Name <span class="required">*</span></label>
                                            <input asp-for="FirstName" type="text" class="form-control" readonly>
                                            
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label asp-for="LastName"> LastName <span class="required">*</span></label>
                                            <input asp-for="LastName" type="text" class="form-control" readonly>
                                            
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Email <span class="required">*</span></label>
                                            <input asp-for="ApplicationUser.Email" type="text" class="form-control" readonly>
                                           
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                           
                                            <label> Date of Birth <span class="required">*</span></label>
                                            <input asp-for="DateOfBirth" type="text" class="form-control" readonly>

                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12 d-flex">
                                        <div class="form-group">
                                            <label asp-for="Feet"> Feet <span class="required">*</span></label>
                                            <input asp-for="Feet" type="number" class="form-control" readonly>
                                           
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Inch"> Inch <span class="required">*</span></label>
                                            <input asp-for="Inch" type="number" class="form-control" readonly>
                                          
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label asp-for="Weight"> Weight *kg<span class="required">*</span></label>
                                            <input asp-for="Weight" type="text" class="form-control" readonly>
                                           
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label> Mobile number <span class="required">*</span></label>
                                            <input asp-for="ApplicationUser.PhoneNumber" type="number" class="form-control" readonly>
                                        </div>
                                    </div>
                                </div>
                                

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">

                                            @foreach (var c in System.Enum.GetValues(typeof(Gender)).OfType<Gender>() )
                                            {
                                                
                                                <label asp-for="Gender"> @c</label>
                                                <input asp-for="Gender" type="radio" value="@((int)c)"  checked="@(c == Model?.Gender)"/>


                                               
                                            }

                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label asp-for="Address"> Address <span class="required">*</span></label>
                                            <input asp-for="Address" type="text" class="form-control" readonly>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label asp-for="HealthDescription">Any Health issue <span class="required">*</span></label>
                                            <textarea asp-for="HealthDescription" rows="4" class="form-control" readonly></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>
                </div>
                <hr>
            </div>
        </div>
    </div>
</div>
